<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <servlet>
        <servlet-name>holdemWs</servlet-name>
        <servlet-class>com.nedogeek.holdem.server.HoldemWebSocketServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>holdemWs</servlet-name>
        <url-pattern>/ws/*</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>DOJOGamePage.html</welcome-file>
    </welcome-file-list>

</web-app>